@page "/"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="my-6">
    <!-- Welcome Section -->
    <MudPaper Class="pa-6 mb-6">
        <MudText Typo="Typo.h3">Welcome to My Portfolio</MudText>

    </MudPaper>

    <!-- Introduction -->
    <section id="introduction">
        <MudPaper Class="pa-6 mb-6">
            <MudText Typo="Typo.h4">👋 About Me</MudText>
            <MudText Typo="Typo.body1">
                I'm a multidisciplinary creator with a passion for tech, games, and hands-on builds.
                Whether it's writing code or soldering wires, I bring ideas to life with creativity and precision.
            </MudText>
            <MudText Typo="Typo.body2" Class="mt-2">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus vitae nisi nec augue finibus egestas.
                Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.
            </MudText>
        </MudPaper>
    </section>

    <!-- Game Projects -->
    <section id="games">
        <MudPaper Class="pa-6 mb-6">
            <MudText Typo="Typo.h4">🎮 Game Projects</MudText>
            @for (int i = 1; i <= 3; i++)
            {
                <MudCard Class="mb-4">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Game Title #{i}</MudText>
                        <MudText Typo="Typo.body2">Short description of game #{i}. Features cool mechanics and slick visuals.</MudText>
                    </MudCardContent>
                </MudCard>
            }
            <MudButton Variant="Variant.Filled" Href="/gameprojects" Color="Color.Primary">See All</MudButton>
        </MudPaper>
    </section>

    <!-- Software Projects -->
    <section id="software">
        <MudPaper Class="pa-6 mb-6">
            <MudText Typo="Typo.h4">💻 Software Projects</MudText>
            <MudGrid>
                @for (int i = 1; i <= 2; i++)
                {
                    <MudItem xs="12" sm="6">
                        <MudPaper Class="pa-4">
                            <MudText Typo="Typo.h6">App #{i}</MudText>
                            <MudText Typo="Typo.body2">A project showcasing practical problem solving and clean architecture.</MudText>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
            <MudButton Variant="Variant.Filled" Href="/softwareprojects" Color="Color.Secondary" Class="mt-4">See All</MudButton>
        </MudPaper>

    </section>

    <!-- Physical Projects -->
    <section id="physical">
        <MudPaper Class="pa-6 mb-6">
            <MudText Typo="Typo.h4">💻 Software Projects</MudText>
            <MudGrid>
                @for (int i = 1; i <= 2; i++)
                {
                    <MudItem xs="12" sm="6">
                        <MudPaper Class="pa-4">
                            <MudText Typo="Typo.h6">App #{i}</MudText>
                            <MudText Typo="Typo.body2">A project showcasing practical problem solving and clean architecture.</MudText>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
            <MudButton Variant="Variant.Filled" Href="/softwareprojects" Color="Color.Secondary" Class="mt-4">See All</MudButton>
        </MudPaper>

    </section>

    <!-- Contact -->
    <section id="contact">
        <MudPaper Class="pa-6 mb-6">
            <MudText Typo="Typo.h4">📬 Let's Connect</MudText>
            <MudText Typo="Typo.body1">
                Reach out to me on any of the platforms below, or send a friendly email my way!
            </MudText>

            <MudList T="string">
                <MudListItem>📧 Email: you@example.com</MudListItem>
                <MudListItem>🐦 Twitter: youhandle</MudListItem>
                <MudListItem>💼 LinkedIn: /in/yourname</MudListItem>
            </MudList>
        </MudPaper>
    </section>
</MudContainer>
